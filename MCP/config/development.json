{
  "mcpServers": {
    "sqlite": {
      "command": "${NOAH_PYTHON_PATH}",
      "args": [
        "-m",
        "mcp_server_sqlite"
      ],
      "disabled": false,
      "alwaysAllow": [
        "append_insight",
        "describe_table",
        "list_tables",
        "create_table",
        "write_query",
        "read_query"
      ],
      "env": {
        "PYTHONPATH": "${NOAH_HOME}/MCP/custom-mcp/sqlite/src",
        "SQLITE_DB_PATH": "${NOAH_DATA_PATH}/sqlite/db.sqlite"
      }
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"
      ],
      "disabled": false,
      "alwaysAllow": [
        "query"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${NOAH_DATA_PATH}"
      ],
      "disabled": false,
      "alwaysAllow": [
        "read_file",
        "write_file",
        "create_directory",
        "list_directory",
        "move_file",
        "search_files",
        "get_file_info",
        "list_allowed_directories"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "disabled": false,
      "alwaysAllow": [
        "create_entities",
        "create_relations",
        "add_observations",
        "delete_entities",
        "delete_observations",
        "delete_relations",
        "read_graph",
        "search_nodes",
        "open_nodes"
      ]
    }
  }
}